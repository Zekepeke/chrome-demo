{
  "manifest_version": 3,
  "name": "Quick Demo Extension (QDE)",
  "description": "A tiny Chrome extension demo: shows page info, lets you set a realâ€‘time status, and (optionally) connects to a simple backend.",
  "version": "1.1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "host_permissions": ["http://*/*", "https://*/*"]
}